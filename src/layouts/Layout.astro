---
interface Props {
	title: string;
}

const { title } = Astro.props;
import './src/styles/common.css';
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="FoMクリエイトは東京・埼玉を拠点に、演奏動画の収録・制作を行っています。ピアノ・クラシックのほか、お教室の発表会やプロモーション動画など広範囲に制作いたします。" />
		<meta name="viewport" content="width=device-width" />
		<meta property="og:url" content="https://fom-create.com" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="FoMクリエイト" />
		<meta property="og:description" content="FoMクリエイトは東京・埼玉を拠点に、演奏動画の収録・制作を行っています。ピアノ・クラシックのほか、お教室の発表会やプロモーション動画など広範囲に制作いたします。" />
		<meta property="og:site_name" content="FoMクリエイト" />
		<meta property="og:image" content="https://fom-create.com/ogp.JPG" />
		<meta property="twitter:card" content="summary_large_image">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/gridlex/2.3.1/gridlex.min.css" async="" defer="">
		<link rel="icon" type="image/x-icon" href="/favicon.ico">
		<link rel="canonical" href="https://fom-create.com">
		<script src="https://www.googletagmanager.com/gtag/js?id=G-G2K66HM9P5" async=""></script>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP&family=Sofia&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: 'Noto Sans JP', sans-serif;
		font-size: 16px;
		box-sizing: border-box;
		line-height: 1.5;
		letter-spacing: 1px;
		background: #f0ebeb;
		color: #333;
		scroll-behavior: smooth;
	}
</style>
